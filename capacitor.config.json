{
  "appId": "com.solucnet.tecnicos",
  "appName": "SolucNet Técnicos",
  "webDir": "public/mobile",
  "server": {
    "cleartext": true,
    "hostname": "cliente.solucnet.com"
  },
  "android": {
    "buildOptions": {
      "keystorePath": "android/release.keystore",
      "keystoreAlias": "solucnet-key"
    },
    "allowMixedContent": true,
    "backgroundColor": "#28a745",
    "webContentsDebuggingEnabled": true
  },
  "plugins": {
    "SplashScreen": {
      "launchShowDuration": 2000,
      "backgroundColor": "#28a745",
      "showSpinner": true,
      "androidSpinnerStyle": "large",
      "spinnerColor": "#ffffff"
    },
    "Camera": {
      "saveToGallery": true,
      "quality": 90
    },
    "Geolocation": {
      "locationAccuracy": "high"
    },
    "Network": {
      "notifyConnectionChanged": true
    },
    "BackgroundMode": {
      "title": "SolucNet Técnicos",
      "text": "App activa en segundo plano",
      "icon": "icon",
      "color": "28a745",
      "resume": true,
      "hidden": false,
      "bigText": false,
      "silent": false,
      "sticky": true,
      "enable": true
    },
    "LocalNotifications": {
      "smallIcon": "ic_stat_icon_config_sample",
      "iconColor": "#28a745",
      "sound": "default"
    }
  }
}
